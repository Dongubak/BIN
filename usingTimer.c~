long int count_i;
int count_k;

// Timer 0 overflow interrupt service routine
interrupt [TIM0_OVF] void timer0_ovf_isr(void)
{
  
// Reinitialize Timer 0 value
  TCNT0=0xF9; ///249면 인터럽트
  count_i++;
  
  if((count_i % 22321) == 0) {
    count_k++;
    printf("\r\n %d second", count_k * 16);
  }
